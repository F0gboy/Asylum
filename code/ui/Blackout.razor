@using Sandbox
@inherits Sandbox.UI.RootPanel


<style>
    #black-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: black;
        opacity: 1;
        transition: opacity 1s ease-in-out;
    }

    #reveal-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 1s ease-in-out;
    }
    .game-over {
        font-family: 'Chiller', cursive;
        font-size: 150px;
        text-align: center;
        color: black;
        text-shadow: 0 0 10px red;
        animation: blink;
        animation-name: blink; /* added */
        animation-duration: 4s;
        animation-iteration-count: infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    @@keyframes blink {
        0% {
            opacity: 1;
        }

        25% {
            opacity: 0.2;
      
        }

        50% {
            opacity: 1;
            
        }

        75% {
            opacity: 0.2;
            
        }

        100% {
            opacity: 1;
            
        }
    }


</style>

<root>
    @if (isTrue)
    {
        <div id="black-screen">
            <p class="game-over">Game Over</p>
        </div>
    }
    else
    {
        <div id="reveal-screen"></div>
    }
    
</root>




